{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "3.2.1-6-BodyResources.json",
    "title": "Checks for and validates specific keys for Body Resources",
    "description": "Each schema in #/definitions checks a key or constraint on Resource desription used as Body of Annotation from Section 3.2.1 - 3.2.6 and/or Section 3.3, referencing definition / common schemas as needed.",
    "type": "object",
    "properties": 
    {
        "body":
        { "oneOf": [
              { "type" : ["string", "object"], 
                "anyOf": [
                   {"$ref": "id.json#/definitions/stringUri"}, 
                   {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                   {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                   {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                   {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                   {"$ref": "bodyTarget.json#/definitions/optionalBodyProperties" }
                 ]              
              },
              { "type" : ["array"], 
                "items": {"anyOf": [
                   {"$ref": "id.json#/definitions/stringUri"}, 
                   {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                   {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                   {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                   {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                   {"$ref": "bodyTarget.json#/definitions/optionalBodyProperties" }
                 ] 
               } 
             }
           ]      
        }
    },              

    "definitions": 
    { 

        "webResourceUsed":
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: At least one body is an External Web Resource.",    
            "title": "Check for External Web Resources as body",
            "description": "True if Annotation contains 1 or more External Web Resources as Body (Section 3.2.1)",
            "type": "object",
            "properties":
            {
                "body": 
                { 
                    "oneOf":
                    [
                         { "type": "object",
                           "$ref": "bodyTarget.json#/definitions/externalWebResourceDetected"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "bodyTarget.json#/definitions/externalWebResourceDetected" } } } 
                         } 
                    ]  
                }
            }
         },
         
         "textualBodyUsed":
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: At least one body is an Embedded Textual Body.",    
            "title": "Check for Embedded Textual Body as body",
            "description": "True if Annotation contains 1 or more Embedded Textual Bodies as Body (Section 3.2.4)",
            "type": "object",
            "properties":
            {
                "body": 
                { 
                    "oneOf":
                     [
                         { "type":  "object",
                           "$ref": "bodyTarget.json#/definitions/textualBodyFound"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "bodyTarget.json#/definitions/textualBodyFound" } } } 
                         } 
                    ]  
                }
            }
         },

         "bodyValueUsed":
         {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: Annotation contains a String Body.",    
            "title": "Check for String Body as body",
            "description": "True if Annotation contains a String Body (Section 3.2.5)",
            "type": "object",
            "required": ["bodyValue" ] 
         },

         "textDirectionUsed": 
         {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: Annotation implements textDirection on one or more bodies.",    
            "title": "Check for textDirection",
            "description": "True if one or more qualifying body(ies) includes textDirection(Section 3.2.1)",
            "type": "object",
            "properties": 
            {
                "body":
                {
                    "oneOf":
                     [
                         { "type":  "object",
                           "$ref": "bodyTarget.json#/definitions/textDirectionPropertyFound"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "bodyTarget.json#/definitions/textDirectionPropertyFound" } } } 
                         } 
                    ]  
                }
            }
         },
         
         "processingLanguageUsed":
         {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: Annotation implements processingLanguage on one or more bodies.",    
            "title": "Check for processingLanguage",
            "description": "True if one or more qualifying body(ies) includes processingLanguage(Section 3.2.1)",
            "type": "object",
            "properties": 
            {
                "body":
                {
                    "oneOf":
                     [
                         { "type":  "object",
                           "$ref": "bodyTarget.json#/definitions/processingLanguagePropertyFound"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "bodyTarget.json#/definitions/processingLanguagePropertyFound" } } } 
                         } 
                    ]  
                }
            }             
         },
         
        "languageUsed":
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: Annotation implements Language on one or more bodies.",    
            "title": "Check for Language",
            "description": "True if one or more qualifying body(ies) includes Language(Section 3.2.1)",
            "type": "object",
            "properties": 
            {
                "body":
                {
                    "oneOf":
                     [
                         { "type":  "object",
                           "$ref": "bodyTarget.json#/definitions/languagePropertyFound"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "bodyTarget.json#/definitions/languagePropertyFound" } } } 
                         } 
                    ]  
                }
            } 
        },

        "singleLanguageShould":
         {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "should",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Warning: External Web Resource Bodies, Embedded Textual Bodies, Specific Resource Bodies should each have exactly 1 language value.",    
            "title": "Check for more than 1 language per qualifying body",
            "description": "True if all qualifying body(ies) have exactly 1 language value each (Section 3.2.1). Remains valid if no qualifying bodies.",
            "type": "object",
            "properties": 
            {
                "body":
                 { "oneOf": [
                      { "type" : ["string", "object"], 
                        "anyOf": [
                           {"$ref": "id.json#/definitions/stringUri"}, 
                           {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                           {"$ref": "bodyTarget.json#/definitions/singleLanguagePropertyFound" }
                         ]              
                      },
                      { "type" : ["array"], 
                        "items": {"anyOf": [
                           {"$ref": "id.json#/definitions/stringUri"}, 
                           {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                           {"$ref": "bodyTarget.json#/definitions/singleLanguagePropertyFound" }
                         ] 
                       } 
                     }
                   ]      
                }
             }
         },
         
        "formatUsed":
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: Annotation implements format on one or more bodies.",    
            "title": "Check for format",
            "description": "True if one or more qualifying body(ies) includes format (Section 3.2.1)",
            "type": "object",
            "properties": 
            {
                "body":
                {
                    "oneOf":
                     [
                         { "type":  "object",
                           "$ref": "bodyTarget.json#/definitions/formatPropertyFound"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "otherProperties.json#/definitions/formatPropertyFound" } } } 
                         } 
                    ]  
                }
            } 
        },

        "singleFormatShould":
         {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "should",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Warning: External Web Resource Bodies, Embedded Textual Bodies, Specific Resource Bodies should each have exactly 1 format value.",    
            "title": "Check for more than 1 format per qualifying body",
            "description": "True if all qualifying body(ies) have exactly 1 format value each (Section 3.2.1). Remains valid if no qualifying bodies",
            "type": "object",
            "properties": 
            {
                "body":
                 { "oneOf": [
                      { "type" : ["string", "object"], 
                        "anyOf": [
                           {"$ref": "id.json#/definitions/stringUri"}, 
                           {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                           {"$ref": "bodyTarget.json#/definitions/singleFormatPropertyFound" }
                         ]              
                      },
                      { "type" : ["array"], 
                        "items": {"anyOf": [
                           {"$ref": "id.json#/definitions/stringUri"}, 
                           {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                           {"$ref": "bodyTarget.json#/definitions/singleFormatPropertyFound" }
                         ] 
                       } 
                     }
                   ]      
                }     
            }
        },

        "createdUsed":
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "may",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Informational: Annotation implements created on one or more bodies.",    
            "title": "Check for created",
            "description": "True if one or more qualifying body(ies) includes created (Section 3.3.1)",
            "type": "object",
            "properties": 
            {
                "body":
                {
                    "oneOf":
                     [
                         { "type":  "object",
                           "$ref": "bodyTarget.json#/definitions/createdPropertyFound"  
                         },
                         { "type": "array",
                           "not": {"items": { "not": { "$ref": "bodyTarget.json#/definitions/createdPropertyFound" } } } 
                         } 
                    ]  
                }
            } 
        },

        "singleCreatedShould":
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "assertionType": "should",
            "expectedResult": "valid",
            "onUnexpectedResult" : "suceedAndContinue",
            "errorMessage": "Warning: External Web Resource bodies, Textual Bodies, Specific Resource Bodies should each have exactly 1 created value.",    
            "title": "Check for other than 1 created per qualifying body",
            "description": "True if all qualifying body(ies) have exactly 1 created value each (Section 3.3.1); Remains valid if no qualifying bodies.",
            "type": "object",
            "properties": 
            {
                "body":
                 { "oneOf": [
                      { "type" : ["string", "object"], 
                        "anyOf": [
                           {"$ref": "id.json#/definitions/stringUri"}, 
                           {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                           {"$ref": "bodyTarget.json#/definitions/createdPropertyFound" }
                         ]              
                      },
                      { "type" : ["array"], 
                        "items": {"anyOf": [
                           {"$ref": "id.json#/definitions/stringUri"}, 
                           {"$ref": "choiceSet.json#/definitions/choiceDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/compositeDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/independentsDetected" }, 
                           {"$ref": "choiceSet.json#/definitions/listDetected" }, 
                           {"$ref": "bodyTarget.json#/definitions/createdPropertyFound" }
                         ] 
                       } 
                     }
                   ]      
                }     
            }
        }
        
   }
}