{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "textualBodyDetected.json",
	"title": "Definition: TextualBody object",
	"description": "True when body is a valid TextualBody (Section 3.2.4.)",
	"type": "object", 
    "properties":
    {
        "body" :
        {
            "type" : "object",
            "properties" : 
            {
                 "value": 
                 {
                    "type": "string"
                 }
             },
             "required": [ "value" ] 
        }   
    }
}
