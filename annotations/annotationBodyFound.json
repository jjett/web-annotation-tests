{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id" : "annotationBodyFound.json",
  "title": "Validation: Check if annotation has recognizable body(ies)",
  "description": "True when bodyValue only is found (Section 3.2.5) OR any and all bodies are recognizable as either a string/uri, a Choice/Set, a SpecificResource, or an External Web Resource (Sections 3.1, 3.2.7, 3.2.8 4, 3.2.1)",
  "type": "object",
      "properties": {
        "bodyValue": { "type": ["string"] },
        "body":
           {"oneOf": [
              { "type" : ["string", "object"], 
                "anyOf": [
                   {"$ref": "stringUri.json#"}, 
                   {"$ref": "textualBodyDetected.json#" },
                   {"$ref": "choiceDetected.json#" }, 
                   {"$ref": "compositeDetected.json#" }, 
                   {"$ref": "independentsDetected.json#" }, 
                   {"$ref": "listDetected.json#" }, 
                   {"$ref": "specificResourceDetected.json#" },
                   {"$ref": "externalWebResourceDetected.json#" }
                 ]              
              },
              { "type" : ["array"], 
                "items": {"anyOf": [
                   {"$ref": "stringUri.json#"}, 
                   {"$ref": "textualBodyDetected.json#" },
                   {"$ref": "choiceDetected.json#" }, 
                   {"$ref": "compositeDetected.json#" }, 
                   {"$ref": "independentsDetected.json#" }, 
                   {"$ref": "listDetected.json#" }, 
                   {"$ref": "specificResourceDetected.json#" },
                   {"$ref": "externalWebResourceDetected.json#" }
                ] } }
           ]      
      } 
    },
     "oneOf": [
         {"required": ["body"], 
          "not" : {"required": ["bodyValue"] } },
         {"required": ["bodyValue"], 
          "not" : {"required": ["body"] } }
     ]
}
