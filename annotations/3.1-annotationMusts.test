{
  "@context": "https://www.w3.org/ns/JSONtest-v1.jsonld",
  "name": "Annotation must have all the required properties",
  "description": "Each annotation MUST have @context, id, type, and target properties and should have body property.",
  "testType": "manual",
  "ref": "https://www.w3.org/TR/annotation-model/#model",
  "assertions": [
  {
    "assertionFile": "annotationContextValidated.json",
    "assertionType": "must",
    "expectedResult": "valid",
    "onUnexpectedResult" : "failAndContinue",
    "errorMessage": "Error: 'http://www.w3.org/ns/anno.jsonld' is not an @context value."    
  },
  {
    "assertionFile": "annotationIdValidated.json",
    "assertionType": "must",
    "expectedResult": "valid",
    "onUnexpectedResult" : "failAndContinue",
    "errorMessage": "Error: There was no 'id' property"
  },
  {
    "assertionFile": "annotationTypeValidated.json",
    "assertionType": "must",
    "expectedResult": "valid",
    "onUnexpectedResult" : "failAndContinue",
    "errorMessage": "Error: 'Annotation' is not a 'type' value."
  },
  {
    "assertionFile": "annotationTargetFound.json",
    "assertionType": "must",
    "expectedResult": "valid",
    "onUnexpectedResult" : "failAndContinue",
    "errorMessage": "Error: No target was found or one or more unrecognizable targets were encountered."
  },
  {
    "assertionFile": "annotationBodyFound.json",
    "assertionType": "must",
    "expectedResult": "valid",
    "onUnexpectedResult" : "succeedAndContinue",
    "errorMessage": "Warning: No body was found or one, or more unrecognizable bodies were encountered, or both bodyValue and body (which are exclusive keys) were encountered."
  }
  ]
}
